<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1>Detalhes do tipo de corpo celeste</h1>
</div>
<dl class="dl-horizontal">
  <dt><strong>Nome:</strong></dt>
  <dd><%= @orb_type.nome %> </dd>
</dl>

<div class="form-actions">
  <%= link_to new_orb_type_path, :class => 'btn btn-success btn-sm' do %>
    <i class="fa fa-plus"></i>Novo
  <% end %>

  <%= link_to edit_orb_type_path(@orb_type), :class => 'btn btn-primary btn-sm' do %>
    <i class="fa fa-edit"></i> Editar
  <% end %>

  <%= link_to orb_types_path, :class => 'btn btn-primary btn-sm' do %>
    <i class="fa fa-arrow-left"></i> Voltar
  <% end %>

  <%= link_to @orb_type, method: :delete, data: {confirm: 'VocÃª tem certeza?'}, :class => 'btn btn-danger btn-sm' do %>
    <i class="fa fa-trash"></i> Remover
  <% end %>
</div>

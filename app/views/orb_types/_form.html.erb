<%= form_for(@orb_type, html: {class: 'form-horizontal'}) do |f| %>
  <% if @orb_type.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@orb_type.errors.count, "erro") %>:</h2>

      <ul>
      <% @orb_type.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :nome, "Nome:" , class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :nome, class: 'form-control' %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit @orb_type.new_record? ? "Criar novo tipo de planeta" : "Atualizar o tipo de planeta" %>
  </div>
<% end %>

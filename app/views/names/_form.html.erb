<%= form_for(@name) do |f| %>
  <% if @name.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@name.errors.count, "error") %> prohibited this name from being saved:</h2>

      <ul>
      <% @name.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
  </div>
  <div class="field">
    <%= f.label :descr %><br />
    <%= f.text_area :descr %>
  </div>
  <div class="field">
    <%= f.label :race_id, "Raça" %><br />
    <%= collection_select(:name, :race_id, Race.all, :id, :nome, { :prompt => "Selecione uma raça" }) %>
  </div>
  <div class="field">
    <%= f.label :family_id, "Família" %><br />
    <%= collection_select(:name, :family_id, Family.all, :id, :nome, { :prompt => "Selecione uma família" }) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

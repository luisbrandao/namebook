<p id="notice"><%= notice %></p>
<h1>Livros</h1>
<p>
  <%= link_to new_book_path, class: 'btn btn-success' do %>
    <i class="fa fa-plus"></i> Novo Livro
  <% end %>
</p>
<% @books.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |book| %>
      <div class="col-md-4">
        <h4><%= link_to book.nome, book %></h4>
        <%= book.descr %>
      </div>
    <% end %>
  </div>
<% end %>

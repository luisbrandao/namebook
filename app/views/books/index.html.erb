<h1>Listando os Livros</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Nome</th>
    <th>Data do inicio</th>
    <th>Data da conclusão</th>
    <th>Descrição</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.id %></td>
    <td><%= book.nome %></td>
    <td><%= book.datai %></td>
    <td><%= book.dataf %></td>
    <td><%= book.descr %></td>
    <td><%= link_to 'Detalhes', book %></td>
    <td><%= link_to 'Editar', edit_book_path(book) %></td>
    <td><%= link_to 'Remover', book, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
  </tr>
<% end %>
</table>

<br />


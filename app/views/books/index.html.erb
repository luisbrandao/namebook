<h1>Listing books</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Nome</th>
    <th>Datai</th>
    <th>Dataf</th>
    <th>Descr</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.id %></td>
    <td><%= book.nome %></td>
    <td><%= book.datai %></td>
    <td><%= book.dataf %></td>
    <td><%= book.descr %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>


<p id="notice"><%= notice %></p>

<h1>Livros</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Data do início</th>
      <th>Data de conclusão</th>
      <th>Raças</th>
      <th>Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book %></td>
        <td><%= h(book.descr).gsub(/\n/, '<br/>').html_safe %></td>
        <td><%= book.datai %></td>
        <td><%= book.dataf %></td>
        <td>
          <ul>
            <% book.races.sort.each do |race| %>
              <li> <%= race %> </li>
            <% end %>
          </ul>
        </td>
        <td>
          <%= link_to book , :class => 'btn btn-primary btn-sm' do %>
            <i class="bi bi-search"></i> Detalhes
          <% end %>
          <%= link_to edit_book_path(book), :class => 'btn btn-primary btn-sm' do %>
            <i class="bi bi-pencil"></i> Editar
          <% end %>

          <%= link_to book, method: :delete, data: {confirm: 'Você tem certeza?'}, :class => 'btn btn-danger btn-sm' do %>
            <i class="bi bi-trash"></i> Remover
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to new_book_path, class: 'btn btn-success' do %>
  <i class="bi bi-plus"></i> Novo Livro
<% end %>

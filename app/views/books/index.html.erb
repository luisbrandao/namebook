<h1>Listando livros</h1>

<table class=table>
  <tr>
    <th>Nome</th>
    <th>Descrição</th>
    <th>Data do início</th>
    <th>Data de conclusão</th>
    <th>Raças</th>
    <th>Ações</th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book %></td>
    <td><%= h(book.descr).gsub(/\n/, '<br/>').html_safe %></td>
    <td><%= book.datai %></td>
    <td><%= book.dataf %></td>
    <td>
      <ul>
        <% book.races.each do |race| %>
          <li> <%= race %> </li>
        <% end %>
      </ul>
    </td>
    <td><%= link_to 'Detalhes', book %><br/>
    <%= link_to 'Editar', edit_book_path(book) %><br/>
    <%= link_to 'Remover', book, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo livro', new_book_path %>

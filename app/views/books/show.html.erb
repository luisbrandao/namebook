<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1>Detalhes do livro</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Nome:</strong></dt>
  <dd><%= @book.nome %> </dd>
</dl>

<dl class="dl-horizontal">
  <dt><strong>Raças:</strong></dt>
  <ul>
    <% @book.races.sort.each do |race| %>
    <li> <%= race %> </li>
    <% end %>
  </ul>
</dl>

<dl class="dl-horizontal">
  <dt><strong>Data do inicio:</strong></dt>
  <dd><%= @book.datai %> </dd>
</dl>

<dl class="dl-horizontal">
  <dt><strong>Data da conclusão:</strong></dt>
  <dd><%= @book.dataf %> </dd>
</dl>

<dl class="dl-horizontal">
  <dt><strong>Descrição:</strong></dt>
  <dd><%= h(@book.descr).gsub(/\n/, '<br/>').html_safe %> </dd>
</dl>

<div class="form-actions">
  <%= link_to new_book_path, :class => 'btn btn-success btn-sm' do %>
    <i class="bi bi-plus"></i>Novo
  <% end %>

  <%= link_to edit_book_path(@book), :class => 'btn btn-primary btn-sm' do %>
    <i class="bi bi-pencil"></i> Editar
  <% end %>

  <%= link_to books_path, :class => 'btn btn-primary btn-sm' do %>
    <i class="bi bi-x-octagon"></i> Voltar
  <% end %>

  <%= link_to @book, method: :delete, data: {confirm: 'Você tem certeza?'}, :class => 'btn btn-danger btn-sm' do %>
    <i class="bi bi-trash"></i> Remover
  <% end %>
</div>

<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> O livro não pode ser salvo:</h2>

      <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
  </div>
  <div class="field">
    <%= f.label :descr, "Descrição" %><br />
    <%= f.text_area :descr %>
  </div>
  <div class="field">
    <%= f.label :datai, "Data do inicio" %><br />
    <%= f.text_field :datai %>
  </div>
  <div class="field">
    <%= f.label :dataf, "Data da conclusão" %><br />
    <%= f.text_field :dataf %>
  </div>
  
  <%= hidden_field_tag 'book[race_ids][]', '' %>
  <%= f.label :races, "Raças" %><br />
  <% @race.each do |race| %>
    <div>
      <%= check_box_tag "book[race_ids][]", race.id, @book.races.include?(race) %>
      <%= race.nome %>
    </div>
  <% end %>
  
  <div class="actions">
    <%= f.submit "Criar novo livro" %>
  </div>
<% end %>

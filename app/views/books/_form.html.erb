<%= form_with(model: book) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(book.errors.count, 'erro', plural: 'erros') %>:</h2>

      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <strong><%= form.label :nome, :class => "form-label" %></strong>
    <%= form.text_field :nome, :class => "form-control" %>
  </div>

  <div class="mb-3">
    <%= hidden_field_tag 'book[race_ids][]', '' %>
    <strong><%= form.label :races, "Raças" %><br /></strong>
    <div class="form-check">
      <% @race.each do |race| %>
        <div>
          <%= check_box_tag "book[race_ids][]", race.id, @book.races.include?(race), class: 'form-check-input' %>
          <div class="form-check-label"> <%= race %> </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="mb-3">
    <strong><%= form.label :descr, "Descrição", :class => "form-label" %></strong>
    <%= form.text_area :descr, :class => "form-control", :rows =>"6" %>
  </div>

  <div class="mb-3">
    <strong><%= form.label :datai, "Data do inicio", :class => "form-label" %></strong>
    <%= form.text_field :datai, :class => "form-control" %>
  </div>

  <div class="mb-3">
    <strong><%= form.label :dataf, "Data da conclusão", :class => "form-label" %></strong>
    <%= form.text_field :dataf, :class => "form-control" %>
  </div>

  <div class="form-group">
    <div class="actions">
      <%= form.submit @book.new_record? ? "Criar novo livro" : "Atualizar livro", :class => "btn btn-success btn-sm" %>

      <% unless @book.new_record? %>
        <%= link_to @book , :class => 'btn btn-primary btn-sm' do %>
          <i class="fa-solid fa-magnifying-glass"></i> Detalhes
        <% end %>
      <% end %>

      <%= link_to books_path, :class => 'btn btn-primary btn-sm' do %>
        <i class="fa-solid fa-arrow-left"></i> Voltar
      <% end %>
    </div>
  </div>
<% end %>

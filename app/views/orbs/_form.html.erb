<%= form_with(model: orb) do |form| %>
  <% if orb.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(orb.errors.count, 'erro', plural: 'erros') %>:</h2>

      <ul>
        <% orb.errors.each do |error| %>
          <li><%= error.full_message %> </li>
        <% end %>
      </ul>
    </div>
  <% end %>

<h1><%= t('.welcome') %></h1>

  <div class="mb-3">
    <strong><%= form.label :nome, :class => "form-label" %></strong>
    <%= form.text_field :nome, :class => "form-control" %>
  </div>

  <div class="mb-3">
    <strong><%= form.label :descr, "Descrição", :class => "form-label" %></strong>
    <%= form.text_area :descr, :class => "form-control", :rows =>"6" %>
  </div>

  <div class="mb-3">
    <strong><%= form.label :orb_id, "Orbita", :class => "form-label"  %><br /></strong>
    <%= collection_select(:orb, :orbit_id, Orb.order('nome'), :id, :nome, { :include_blank => "Selecione um Tipo de corpo celeste" }, {:class=>'form-select'} ) %>
  </div>
  <div class="mb-3">
    <strong><%= form.label :orb_type_id, "Tipo de corpo celeste", :class => "form-label"  %><br /></strong>
    <%= collection_select(:orb, :orb_type_id, OrbType.order('nome'), :id, :nome, { :prompt => "Selecione um Tipo de corpo celeste" }, {:class=>'form-select'} ) %>
  </div>

  <div class="mb-3">
    <%= hidden_field_tag 'orb[book_ids][]', '' %>
    <strong><%= form.label :books, "Livros" %><br /></strong>
    <div class="form-check">
      <% @book.each do |book| %>
        <div>
          <%= check_box_tag "orb[book_ids][]", book.id, @orb.books.include?(orb), class: 'form-check-input' %>
          <div class="form-check-label"> <%= book %> </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <div class="actions">
      <%= form.submit @orb.new_record? ? "Criar novo corpo celeste" : "Atualizar o corpo celeste", :class => "btn btn-success btn-sm" %>

      <% unless @orb.new_record? %>
        <%= link_to @orb , :class => 'btn btn-primary btn-sm' do %>
          <i class="fa-solid fa-magnifying-glass"></i> Detalhes
        <% end %>
      <% end %>

      <%= link_to orbs_path, :class => 'btn btn-primary btn-sm' do %>
        <i class="fa-solid fa-arrow-left"></i> Voltar
      <% end %>
    </div>
  </div>
<% end %>

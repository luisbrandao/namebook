<p id="notice"><%= notice %></p>

<h1>Raças</h1>
<% @races.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |race| %>
      <div class="col-md-4">
        <h4><%= link_to race.nome, race %></h4>
        <%= race.descr %>
      </div>
    <% end %>
  </div>
<% end %>
<br>
<%= link_to 'Nova raça', new_race_path, class: 'btn btn-success' %>

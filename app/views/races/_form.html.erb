<%= form_for(@race) do |f| %>
  <% if @race.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@race.errors.count, "erro") %>: A raça não pode ser salva:</h2>

      <ul>
      <% @race.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome %><br />
    <%= f.text_field :nome, :size => "60" %>
  </div>
  <div class="field">
    <%= f.label :descr, "Descrição" %><br />
    <%= f.text_area :descr, :size => "68x15"  %>
  </div>
  <div class="actions">
    <%= f.submit @race.new_record? ? "Criar nova raça" : "Atualizar raça" %>
  </div>
<% end %>

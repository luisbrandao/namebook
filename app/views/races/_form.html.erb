<%= form_for(@race, html: {class: 'form-horizontal'}) do |f| %>
  <% if @race.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@race.errors.count, "erro") %>: </h2>

      <ul>
      <% @race.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :nome, "Nome:" , class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :nome, class: 'form-control' %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :descr, "Descrição:", class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_area :descr, size: "10x10" %>
      </div>
  </div>
  <div class="actions">
    <%= f.submit @race.new_record? ? "Criar nova raça" : "Atualizar raça" %>
  </div>
<% end %>

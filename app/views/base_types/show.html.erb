<div class="page-header">
  <h1>Detalhes do tipo base</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Nome:</strong></dt>
  <dd><%= @base_type.nome %> </dd>
</dl>

<div class="form-actions">
  <%= link_to edit_base_type_path(@base_type), :class => 'btn btn-success btn-sm' do %>

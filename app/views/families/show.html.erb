<h1>Detalhes da Família</h1>
<p>
  <b>Nome:</b>
  <%= @family.nome %>
</p>

<div style="width: 500px;">
  <div style="float: left; width: 200px;">
    <b>Integrantes:</b>
    <ul>
      <% @family.names.each do |name| %>
      <li> <%= name.nome %> </li>
      <% end %>
    </ul>
  </div>

  <div style="float: left; width: 200px;">
    <b>Livros:</b>
    <ul>
      <% @family.books.each do |book| %>
      <li> <%= book.nome %> </li>
      <% end %>
    </ul>
  </div>

  <div style="float: left; width: 100px;">
    <b>Raças:</b>
    <ul>
      <% @family.races.each do |race| %>
      <li> <%= race.nome %> </li>
      <% end %>
    </ul>
  </div>
  <br style="clear: left;" />
</div>

<p>
  <b>Descrição:</b>
  <%= h(@family.descr).gsub(/\n/, '<br/>').html_safe %>
</p>

<%= link_to 'Editar', edit_family_path(@family) %> |
<%= link_to 'Voltar', families_path %> |
<%= link_to 'Nova familia', new_family_path %>

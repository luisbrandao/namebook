<p id="notice"><%= notice %></p>
<h1>Tamanhos de naves</h1>
<p>
  <%= link_to  new_ship_size_path, class: 'btn btn-success' do %>
    <i class="fa fa-plus"></i> Novo tamanho de nave
  <% end %>
</p>

<% @ship_sizes.in_groups_of(3) do |group| %>
  <div class="row">
  <% group.compact.each do |ship_size| %>
    <div class="card ms-2 mb-2" style="width: 26rem;">
      <div class="card-body">
        <h5 class="card-title"><%= link_to ship_size.nome, ship_size %></h5>
        <p class="card-text"><%= ship_size.descr&.truncate(380).gsub(/\n/, '<br/>')&.html_safe %></p>
        <p class="card-text"><%= ship_size.tamanho&.truncate(380).gsub(/\n/, '<br/>')&.html_safe %></p>
      </div>
    </div>
  <% end %>
  </div>
<% end %>